<Page x:Class="Supermarket.Views.PageViews.CashierPageViews.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Supermarket.Views.PageViews.CashierPageViews"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:cashierPageViewModels="clr-namespace:Supermarket.ViewModels.PageViewModels.CashierPageViewModels"
      mc:Ignorable="d"
      Title="HomePage">
    <Page.DataContext>
        <cashierPageViewModels:CashierHomePageViewModel/>
    </Page.DataContext>
    <DockPanel>
        <ui:TextBlock
            DockPanel.Dock="Top"
            Text="Welcome to the Supermarket Checkout"
            FontTypography="Title"
            TextWrapping="Wrap"
            Foreground="White"
            Margin="16 32"/>
        <ui:Button
            DockPanel.Dock="Bottom"
            HorizontalAlignment="Right"
            Appearance="Primary"
            Content="Create New"
            Icon="{ui:SymbolIcon Add24}"
            Command="{Binding AddNewCommand}"
            Margin="16"/>
        <ui:Image
            Source="/Assets/Images/home_page.png"
            MaxHeight="512"/>
    </DockPanel>
</Page>
